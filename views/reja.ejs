<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Reja</title>
    <link rel="stylesheet" href="main.css">
</head>

<body>
    <main>
        <h1>reja va maqsadlar</h1>
        <div class="container">
            <form id="create-form" action="/create-item" method="POST">
                <div class="header-input">
                    <input id="create-field" name="reja" type="text">
                    <button class="add-btn">Yangi Reja Qo'shish</button>
                </div>
            </form>
        </div>
        <ul id="item-list" class="list-group cProductsList">
            <% items.map(function(item) { %>
                <li class="list-group-item d-flex">
                    <span class="item-text">
                        <%=item.reja%>
                    </span>
                    <div class="btn-group-own">
                        <button data-id="<%=item._id%>" class="edit-me btn-success">O'zgartirish</button>
                        <button data-id="<%=item._id%>" class="delete-me btn-danger">O'chirish</button>
                    </div>
                </li>
                <% }) %>
        </ul>
        <button id="clean-all" class="delete-btn">Hamma Rejalarni O'chirish</button>
    </main>

    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
    <script src="/browser.js"></script>
</body>

</html>